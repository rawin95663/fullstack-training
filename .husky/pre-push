#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "ğŸš€ Detecting packages with changes to build..."

# Get packages that have changes since last commit
CHANGED_PACKAGES=$(node scripts/get-changed-packages.js HEAD~1)

if [ -z "$CHANGED_PACKAGES" ]; then
  echo "No changes detected in packages, skipping build."
  exit 0
fi

echo "ğŸ“¦ Found changes in packages: $CHANGED_PACKAGES"

# Build each changed package
echo "ğŸ“¦ Building affected packages using Turbo..."
for PACKAGE in $CHANGED_PACKAGES; do
  echo "ğŸ”¨ Building $PACKAGE..."
  pnpm turbo build --filter="$PACKAGE"
  
  if [ $? -ne 0 ]; then
    echo "âŒ Build failed for $PACKAGE! Push aborted."
    echo "Please fix the build errors and try again."
    exit 1
  fi
done

echo "âœ… Build successful! Ready to push." 